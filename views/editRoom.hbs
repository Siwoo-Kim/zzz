{{>header}}
{{!-- Edit / Update  --}}
<div class="container room-line mt-4">
    <form action="/room/edit" method="POST" enctype="multipart/form-data" id="editRoom">
        <div class="row">
            <div class="form-group col">
                <label for="place">Room Title</label>
                <input id="title" value="{{title}}" class="form-control" name="title" type="text" />
            </div>
            <div class="form-group col">
                <label for="desc">Description</label>
                <input id="description" value="{{description}}" class="form-control" name="description" type="text" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="location">Location</label>
                <input id="location" value="{{location}}" class="form-control" name="location" type="text" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="photo">Photo Upload</label>
                <div class="custom-file">
                    <label class="custom-file-label">Choose file</label>
                    <input type="file" value="{{photo}}" class="custom-file-input" id="photo" name="photo" />
                </div>
            </div>

            <div class="form-group col">
                <label for="price"> Price</label>
                <input id="price" value="{{price}}" class="form-control" name="price" type="text"
                    placeholder="e.g $100" />
            </div>
        </div>
        <div class="mx-auto d-block mb-2">
            <button type="submit" class="btn btn-primary">Edit|Update</button>
        </div>
    </form>
</div>

{{>footer}}