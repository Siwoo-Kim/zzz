{{> header}}
<div class="bg">
    <p class="desc">Admin Dashboard</p>
</div>
<section class="container text-center my-4">
    <div class="alert alert-danger container text-center my-4" role="alert">
        <h2 class="text-center mt-2">Welcome {{fname}} {{lname}}</h2>
        <h4 class="alert-heading">What would you like to do today?</h4>
        <button type="button" class="btn btn-secondary btn-lg"><a href="/roomList">Room Lists</a></button>
    </div>
</section>

{{!-- add/create Room part  --}}
<div class="container room-line mt-4">
    <form action="/admin/createRoom" method="POST" enctype="multipart/form-data" id="createRoom">
        <h3 class="text-center">Create Room</h3>
        <div class="row">
            <div class="form-group col">
                <label for="place">Room Title</label>
                <input id="title" class="form-control" value="{{title}}" name="title" type="text" />
            </div>
            <div class="form-group col">
                <label for="desc">Description</label>
                <input id="desc" class="form-control" value="{{desc}}" name="desc" type="text" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="location">Location</label>
                <input id="location" class="form-control" value="{{location}}" name="location" type="text" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="photo">Photo Upload</label>
                <div class="custom-file">
                    <label class="custom-file-label">Choose file</label>
                    <input type="file" class="custom-file-input" id="photo" value="{{photo}}" name="photo" />
                </div>
            </div>

            <div class="form-group col">
                <label for="price"> Price</label>
                <input id="price" class="form-control" value="{{price}}" name="price" type="text"
                    placeholder="e.g $100" />
            </div>
        </div>
        <div class="mx-auto d-block mb-2">
            <button type="submit" class="btn btn-primary">Create Room</button>
        </div>
    </form>
</div>

{{> footer}}