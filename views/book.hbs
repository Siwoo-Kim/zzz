{{>header}}
<div class="bg">
  <p class="desc">Booking Detail Information</p>
</div>

<section class="form my-4 mx-5">
  <h2 class="text-center my-4 font-weight-bold">Confirm your trip and pay </h2>
  <div class="container">
    <div class="row no-gutters info-room">
      <div class="col-lg-5">
        <img src="./images/room1.jpg" class="img-fluid" alt="" />
      </div>
      <div class="col-lg-7 px-3 pt-3">
        <form id="pay-box">
          <div class="form-row">
            <!-- card information -->
            <div class="form-group col-md-6">
              <label>Card Number</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group col-md-6">
              <label>Address</label>
              <input type="text" class="form-control" />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label>State</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group col-md-6">
              <label>Postal Code</label>
              <input type="text" class="form-control">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label>Expire Date</label>
              <input type="text" class="form-control">
            </div>

            <div class="form-group col-md-6">
              <label>CVV</label>
              <input type="text" class="form-control">
            </div>
            <!-- pay now button goes to modal popup -->
            <div class="mx-auto d-block mb-2">
              <a href="#" data-toggle="modal" data-target="#thankyouModal">
                <button type="submit" class="btn btn-primary">Pay Now</button>
              </a>
            </div>
        </form>
      </div>
</section>


<!-- thank you modal -->
<div class="modal fade" id="thankyouModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body w-100 text-center">
        Thank you for booking at TamHome!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<!-- footer -->
{{>footer}}